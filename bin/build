#! /usr/bin/env bash
SONGS_PATH=`realpath ../songs`
mkdir -p dst/songs
./bin/build-json $SONGS_PATH/*.md > dst/songs.json
./bin/build-html-collection songs ./templates/basic.ejs dst/songs.json

POSTS_PATH=`realpath ../posts`
mkdir -p dst/posts
./bin/build-json $POSTS_PATH/*.md > dst/posts.json
./bin/build-html-collection posts ./templates/basic.ejs dst/posts.json
rm -rf dst/posts/images
ln -s $POSTS_PATH/images dst/posts/images

./bin/build-html homepage ./templates/basic.ejs dst/index.html

cp -r static/* dst/
